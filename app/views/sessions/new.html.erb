<h1>Welcome!</h1>


<div class="row">
  <div class="create_user_form">
    <%= form_for(:session, url: login_path) do |f| %>
      <%= f.text_field :username, placeholder: "Username" %>
      <%= f.password_field :password, placeholder: "Password" %>

      <div class="login-signup">
        <%= f.submit "LOGIN", class:"slider-btn waves-effect waves-light btn" %>
        or
        <%= link_to "SIGN UP", new_volunteer_path, class:"slider-btn waves-effect waves-light btn"%>
      </div>

    <% end %>
  </div>
</div>
