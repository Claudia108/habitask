<div class="row">
  <% tasks.each do |task| %>
    <div class="col xs12 x6 m4 l3">
      <div class="card large">
        <div class="card-image">
            <%= link_to(image_tag(task.image_path, alt: task.image_path), task_path(task)) %>
        </div>
        <div class="card-content">
          <p><b>Task: </b><%= task.name %></p>
          <p><b>Hours: </b><%= task.hours %></p>
          <p><b>Location: </b><%= task.city.name %></p>
          <p><b>Description: </b><%= task.description %></p>
          <p><b>Date: </b><%= task.date %></p>
          <p><b>Start time: </b><%= task.display_time %></p>
        </div>
        <div class="card-action">
          <% if method == :post %>
            <%= link_to "Add to Cart", cart_tasks_path(task_id: task.id), method: method %>
          <% else %>
            <%= link_to "Remove from Cart", cart_task_path(task.id), method: method %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
