<div class="row">
  <% tasks.each do |task| %>
    <div class="col xs12 x6 m4 l3">
      <div class="card large">
        <div class="card-image">
          <img src="<%= task.image_path %>">
        </div>
        <div class="card-content">
          <p><strong><%= task.name %></strong></p>
          <p><%= task.hours %> Hours</p>
          <p><%= task.description %></p>
          <p><%= task.date %></p>
          <p><%= task.start_time %></p>
        </div>
        <div class="card-action">
          <%= link_to "Add to Cart", cart_tasks_path(task_id: task.id), method: :post %>
        </div>
      </div>
    </div>
  <% end %>
</div>
